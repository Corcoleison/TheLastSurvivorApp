<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:background="?attr/colorBackgroundFloating">

    <ImageView
        android:id="@+id/barraSuperiorImageView"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/colorBarraSuperior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TOOLS"
        android:textSize="20dp"
        android:textColor="@color/colorFondo"
        app:layout_constraintEnd_toEndOf="@+id/barraSuperiorImageView"
        app:layout_constraintStart_toStartOf="@+id/barraSuperiorImageView"
        app:layout_constraintTop_toTopOf="@+id/barraSuperiorImageView" />

    <TextView
        android:id="@+id/flashlight_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:text="FLASHLIGHT"
        android:textColor="?attr/editTextColor"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flashlight_imageView" />

    <TextView
        android:id="@+id/barometer_textView"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="BAROMETER"
        android:textColor="?attr/editTextColor"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barometer_imageView" />

    <TextView
        android:id="@+id/compass_textView"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="COMPASS"
        android:textColor="?attr/editTextColor"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conversor_imageView" />

    <TextView
        android:id="@+id/animalsound_textView"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="5dp"
        android:text="LIGHT_SENSOR"
        android:textColor="?attr/editTextColor"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightsensor_imageView" />

    <TextView
        android:id="@+id/nightvision_textView"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="NIGHT VISION"
        android:textColor="?attr/editTextColor"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nightvision_imageView" />

    <TextView
        android:id="@+id/measures_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="30dp"
        android:text="MEASURES"
        android:textColor="?attr/editTextColor"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/measures_imageView" />

    <ImageView
        android:id="@+id/flashlight_imageView"
        android:layout_width="115dp"
        android:layout_height="99dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraSuperiorImageView"
        app:srcCompat="@drawable/flashlight_tool" />

    <ImageView
        android:id="@+id/measures_imageView"
        android:layout_width="115dp"
        android:layout_height="99dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraSuperiorImageView"
        app:srcCompat="@drawable/set_square_tool" />

    <ImageView
        android:id="@+id/barometer_imageView"
        android:layout_width="115dp"
        android:layout_height="101dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flashlight_textView"
        app:srcCompat="@drawable/barometer_tool" />

    <ImageView
        android:id="@+id/nightvision_imageView"
        android:layout_width="115dp"
        android:layout_height="101dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/measures_textView"
        app:srcCompat="@drawable/infrared_tool" />

    <ImageView
        android:id="@+id/conversor_imageView"
        android:layout_width="115dp"
        android:layout_height="101dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barometer_textView"
        app:srcCompat="@drawable/navigation" />

    <ImageView
        android:id="@+id/lightsensor_imageView"
        android:layout_width="115dp"
        android:layout_height="101dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nightvision_textView"
        app:srcCompat="@drawable/brightness" />


</androidx.constraintlayout.widget.ConstraintLayout>