<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:background="?attr/colorBackgroundFloating">

    <ImageView
        android:id="@+id/barraSuperiorImageView"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/colorBarraSuperior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ACCESIBILITY"
        android:textColor="@color/colorFondo"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/barraSuperiorImageView"
        app:layout_constraintStart_toStartOf="@+id/barraSuperiorImageView"
        app:layout_constraintTop_toTopOf="@+id/barraSuperiorImageView" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/barraButton"
        app="http://schemas.android.com/apk/res-auto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/menu_desplegable"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/barraSuperiorImageView"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="30dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/homeButton"
        app="http://schemas.android.com/apk/res-auto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/casa"
        android:tint="@color/colorFondo"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/barraButton"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:maxImageSize="30dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="68dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="DarkMode"
        android:textColor="?attr/editTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraSuperiorImageView" />

    <Switch
        android:id="@+id/dianocheButton"
        android:layout_width="49dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="42dp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/barraSuperiorImageView" />

    <TextView
        android:id="@+id/invertColorText"
        android:layout_width="81dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:text="InvertColors"
        android:textColor="?attr/editTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraSuperiorImageView" />

    <Switch
        android:id="@+id/invertcolorButton"
        android:layout_width="47dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/invertColorText"
        app:layout_constraintTop_toBottomOf="@+id/dianocheButton" />

    <Switch
        android:id="@+id/colorCorrectionSwitch"
        android:layout_width="47dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/barraSuperiorImageView" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Color Options"
        android:textColor="#484848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraSuperiorImageView" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:text="Color Correction"
        android:textColor="#484848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraSuperiorImageView" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="153dp"
        android:layout_height="127dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15">

        <RadioButton
            android:id="@+id/deuteronomalia_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Deuteronomalía"
            android:textColor="?attr/editTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <RadioButton
            android:id="@+id/protanomalia_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Protanomalía"
            android:textColor="?attr/editTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <RadioButton
            android:id="@+id/tritanomalia_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Tritanomalía"
            android:textColor="?attr/editTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

    </RadioGroup>

    <ImageView
        android:id="@+id/imagen_prueba"
        android:layout_width="255dp"
        android:layout_height="195dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/prueba_color_normal" />

</androidx.constraintlayout.widget.ConstraintLayout>