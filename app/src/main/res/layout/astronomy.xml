<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:background="?attr/colorBackgroundFloating">

    <ImageView
        android:id="@+id/barraSuperiorImageView"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/colorBarraSuperior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ASTRONOMY"
        android:textSize="20dp"
        android:textColor="@color/colorFondo"
        app:layout_constraintEnd_toEndOf="@+id/barraSuperiorImageView"
        app:layout_constraintStart_toStartOf="@+id/barraSuperiorImageView"
        app:layout_constraintTop_toTopOf="@+id/barraSuperiorImageView" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SPACE FINDER"
        android:textColor="?attr/editTextColor"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/barraSuperiorImageView"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/barraSuperiorImageView"
        app:layout_constraintTop_toBottomOf="@+id/spaceFinderView" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:text="DATE / HOUR"
        android:textColor="?attr/editTextColor"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/barraSuperiorImageView"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/barraSuperiorImageView"
        app:layout_constraintTop_toBottomOf="@+id/day_night_ImageView" />

    <ImageView
        android:id="@+id/spaceFinderView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraSuperiorImageView"
        app:srcCompat="@drawable/grupo_15" />

    <ImageView
        android:id="@+id/day_night_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:srcCompat="@drawable/grupo_17" />


</androidx.constraintlayout.widget.ConstraintLayout>